.carousel
  text-align: left 
  margin: 2em 0
  &-content 
    &[open]
      .carousel 
        &-header 
          border none 
          &::-webkit-details-marker
            color var(--softRed)
  &-header 
    padding 1.4em 0 
    border-bottom: 1px solid var(--lightGray)
    font-size: .9em
    &:focus
      outline: 0
    &::-webkit-details-marker
      color: var(--softBlue)
      float right


