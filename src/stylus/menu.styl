.menu
  visibility: hidden
  opacity 0
  position: absolute
  left: 0
  right: 0
  top: 100%
  padding: 1.5em 0
  background: rgba(47,53,79,.9)
  height 100vh
  transform: translateY(-50px)
  transition: .3s transform, .3s opacity 
  well-changes: transform
  ul 
    padding 0
    list-style: none
  li  
    border-top: 1px solid var(--grayishBlue)
    &:last-child
      a 
        border 1px solid white
        border-radius:  5px
        margin-top: 1em
        padding: .7em
  a 
    color: white
    text-decoration: none
    text-transform: uppercase
    display: block
    text-align: center
    padding: 1em
    letter-spacing: 2px
  &-open 
    user-select: none
    width: 40px
    height 40px
    display: inline-flex
    cursor: pointer
    background: url('../images/icon-hamburger.svg') no-repeat center 
  &-checkbox
    display: none
    &:checked
      & ~ .header
        background: rgba(47,53,79,.9) 
        .menu-open
          background-image:  url('../images/icon-close.svg') !important
        & .header-logo
          background-image: url('../images/logo-bookmark-white.svg') !important
        & .menu 
            transform: translateY(0px)
            visibility: visible
            opacity 1
         
      

    