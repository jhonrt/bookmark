
@import './header.styl'
@import './hero.styl'
@import './features.styl'
@import './download.styl'
@import './questions.styl'





:root

  --softBlue: hsl(231, 69%, 60%)
  --softRed: hsl(0, 94%, 66%)
  --grayishBlue: hsl(229, 8%, 60%)
  --veryDarkBlue: hsl(229, 31%, 21%)
  --lightGray: #e5e5e5



body   
  font-family: 'Rubik', sans-serif
  color: var(--veryDarkBlue)
  margin: 0
  font-size: 18px
ul 
  padding: 0
  list-style none
  padding: 0
  margin:0
.is-hidden
  display: none !important
.u-wrapper
  max-width: 1280px
  margin: auto
  padding: 0 1em
.u-h1
  font-size: 2em
  font-weight: 500
.u-h2
  @extends .u-h1
  font-size: 1.5em
.u-h3
  margin: 1em 0

.u-p
  color: var(--grayishBlue)
  line-height: 1.7
  font-size: .9em
.u-button
  background: var(--softBlue)
  color: white
  padding 1em
  font-size: .9em
  font-weight: 500
  border-radius: .5em
  margin-left: 1em
  border: none 
  cursor: pointer
  box-shadow: 0 5px 10px -5px var(--softBlue)
  &:first-of-type
    margin: 0
  &.is-gray
    color: var( --veryDarkBlue)
    background: #f7f7f7
  &.is-fullwidth
    width: 100%

